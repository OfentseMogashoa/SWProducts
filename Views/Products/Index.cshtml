@model List<SWProducts.Models.Product>

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Products" class="btn btn-success">
            Create
        </a>
    </div>
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Description</td>
                    <td>Quantity</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Description</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Products" class="btn btn-warning"
                                asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Delete" asp-controller="Products" class="btn btn-danger"
                                asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>