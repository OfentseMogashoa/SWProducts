@model SWProducts.Models.Product

<form asp-action="Edit" asp-controller="Products" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" type="text" />
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Price" type="decimal" />
            </div>
            <div class="form-group">
                <label>Description</label>
                <input asp-for="Description" type="text" />
            </div>
            <div class="form-group">
                <label>Quantity</label>
                <input asp-for="Quantity" type="int" />
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Update Product</button>
                    <a asp-action="Index" asp-controller="Products" class="btn">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>